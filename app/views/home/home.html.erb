<html>
  <body>

  <div class="mapPlanner">

    <p class="centerText">RouteViewer

    <div class="runMenu">
      <%= render 'mapTable' %>
    </div>

    <div class="positionMap">
      <%= render 'map' %>
    </div>

  </div>

  <div class="chatBox">
    <p style="text-align:center;">Chat</p>
    <div class="well" id="chatbox" style="height:200px; border: solid 1px #222222; overflow-y: scroll;">
      <% @messages.each do |message| %>
        <%= render 'messages/message', message: message %>
      <% end %>
    </div>
    <% if current_user %>
      <%= form_with model: @message do |f| %>
        <div class="input-group mb-3">
          <%= f.text_field :body, placeholder: "Send a chat", class: "form-control" %>
          <div class="input-group-append">
            <%= f.submit "Send", class: " btn btn-primary" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p style= "text-align:center">Sign in to send messages</p>
    <% end %>
  

  </div>
  <div class="musicSuggestion">
    <h4 class="centerText">Songs That We Recommend:</h4>
    <%= render 'spotify' %>
  </div>

  <footer>
    <div class="Disclaimer">
      <p>
        <u>Inspirational Quote Generator:</u>
      </p>
      <p>
        <%= %Q["#{@response["quote"]}"] %>
      </p>
      <p>
        Author - <%= %Q[#{@response["author"]}] %>
      </p>
    </div>
  </footer>
  </body>
</html>