= form_for user_run_path(@user, @run_id) do |f|
  - if @run.errors.any?
    #error_explanation
      %h2= "#{pluralize(@run.errors.count, "error")} prohibited this run from being saved:"
      %ul
        - @run.errors.full_messages.each do |message|
          %li= message

  .field
    = f.hidden_field :userID, value: @user.id
  .actions
    = f.submit 'Save'
